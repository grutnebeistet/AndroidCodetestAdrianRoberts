<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/contacts_recycler_view"
        android:name="com.roberts.adrian.androidcodetestadrianroberts.ContactsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding"
        tools:context="com.roberts.adrian.androidcodetestadrianroberts.ContactsFragment"
        tools:listitem="@layout/contact_list_item" />

    <TextView
        android:id="@+id/no_contacts_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/empty_contact_list"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</FrameLayout>