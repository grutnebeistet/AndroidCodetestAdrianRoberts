<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:divider="?android:attr/listDivider"
    android:weightSum="100">

    <fragment
        android:id="@+id/contacts"
        android:name="com.roberts.adrian.androidcodetestadrianroberts.ContactsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:layout="@layout/fragment_contact_list" />

    <fragment
        android:id="@+id/contact_details"
        android:name="com.roberts.adrian.androidcodetestadrianroberts.ContactDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:layout="@layout/fragment_contact_details" />

</LinearLayout>